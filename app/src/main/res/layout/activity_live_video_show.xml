<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:wowza="http://schemas.android.com/apk/res-auto"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	tools:context=".app.ui.activity.LiveVideoShowActivity"
	android:id="@+id/lv_container">
	<!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

	<RelativeLayout
		android:id="@+id/cameraView"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#0d0d0d">
		<!-- 와우자카메라와 비디오 -->
		<com.wowza.gocoder.sdk.api.devices.WOWZCameraView
			android:id="@+id/WOWZCameraView_id"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_gravity="center"
			wowza:scaleMode="fill"
			wowza:defaultCamera="front"
			android:visibility="gone"/>
		<!--<net.majorkernelpanic.streaming.gl.SurfaceView-->
			<!--android:id="@+id/libcamera_view_id"-->
			<!--android:layout_width="match_parent"-->
			<!--android:layout_height="match_parent"-->
			<!--android:layout_marginLeft="-200dp"-->
			<!--android:layout_marginRight="-200dp"-->
			<!--android:layout_centerInParent="true"-->
			<!--android:visibility="gone"/>-->
		<com.coco.livestreaming.app.ui.widget.GuestPlayerView
			android:id="@+id/videoview_id"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_centerInParent="true"
			android:visibility="visible"/>

        <com.coco.livestreaming.app.ui.widget.GuestPlayerView
            android:id="@+id/nox_videoview_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="-200dp"
            android:layout_marginRight="-200dp"
            android:visibility="visible"
            android:layout_alignParentTop="true"
			android:layout_centerInParent="true"
             />

    </RelativeLayout>

	<!-- 상태현시화면레이어-->
	<!--<com.coco.livestreaming.gocoder.ui.StatusView-->
		<!--android:id="@+id/statusview_id"-->
		<!--android:layout_width="match_parent"-->
		<!--android:layout_height="match_parent"-->
		<!--android:visibility="invisible"-->
		<!--android:layout_alignParentTop="true"-->
		<!--android:layout_alignParentStart="true">-->
	<!--</com.coco.livestreaming.gocoder.ui.StatusView>-->

	<ProgressBar
		style="?android:attr/progressBarStyleLarge"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:id="@+id/progress_mediaplayer_loading_id"
		android:max="100"
		android:visibility="invisible"/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_gravity="end|center_vertical"
		android:id="@+id/lay_main_board"
		android:layout_alignParentTop="true"
		android:layout_alignParentStart="true">

        <!-- 채팅로그 및 영상대화 레이어 -->
		<RelativeLayout
            android:id="@+id/layout_chat_container"
			android:layout_width="match_parent"
			android:layout_height="match_parent">
			<!--초청자비디오화면-->
			<RelativeLayout
				android:layout_height="wrap_content"
				android:layout_width="@dimen/video_width"
				android:id="@+id/lay_invite_id"
				android:layout_above="@+id/lay_bottom_chat_bar"
				android:layout_alignParentEnd="true">
				<RelativeLayout
					android:id="@+id/lay_guest_camera_id"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@drawable/rounded_corner"
					android:padding="1dp"
					android:layout_alignParentBottom="true"
					android:visibility="gone">
					<ImageView
						android:id="@+id/guest_thumbnail_view_id"
						android:layout_width="match_parent"
						android:layout_height="@dimen/video_height"
						android:layout_gravity="center"
						android:layout_marginTop="10dp"
						android:scaleType="fitXY"
						android:src="@drawable/no_image"
						android:visibility="visible"/>
					<com.wowza.gocoder.sdk.api.devices.WOWZCameraView
						android:id="@+id/guest_WOWZCameraView_id"
						android:layout_width="match_parent"
						android:layout_height="@dimen/video_height"
						android:layout_gravity="center"
						android:layout_marginTop="10dp"
						wowza:scaleMode="fill"
						wowza:defaultCamera="front"
						android:visibility="invisible"/>
					<!--<net.majorkernelpanic.streaming.gl.SurfaceView-->
						<!--android:id="@+id/guest_libcameraview_id"-->
						<!--android:layout_width="match_parent"-->
						<!--android:layout_height="@dimen/video_height"-->
						<!--android:layout_gravity="center"-->
						<!--android:layout_marginTop="10dp"-->
						<!--android:visibility="invisible"/>-->
					<TextView
						android:id="@+id/txt_guest_camera_cover_id"
						android:layout_width="wrap_content"
						android:layout_height="15dp"
						android:textSize="@dimen/text_size_12"
						android:textColor="@color/right_gray_color"
						android:layout_centerHorizontal="true"
						android:gravity="center"
						android:layout_below="@id/guest_thumbnail_view_id"
						android:visibility="visible"/>
				</RelativeLayout>

				<RelativeLayout
					android:id="@+id/lay_invite_video1_id"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@drawable/rounded_corner"
					android:padding="1dp"
					android:layout_alignWithParentIfMissing="true"
					android:layout_above="@+id/lay_guest_camera_id">
					<ImageView
						android:id="@+id/invite_thumbnail_view1_id"
						android:layout_width="match_parent"
						android:layout_height="@dimen/video_height"
						android:layout_gravity="center"
						android:layout_marginTop="10dp"
						android:scaleType="fitXY"
						android:src="@drawable/no_image"
						android:visibility="gone"/>
					<com.coco.livestreaming.app.ui.widget.GuestPlayerView
						android:id="@+id/invite_view1_id"
						android:layout_width="match_parent"
						android:layout_height="@dimen/video_height"
						android:layout_gravity="center"
						android:layout_marginTop="10dp"
						android:alpha="0"
						android:longClickable="true"
						android:visibility="gone"/>
					<TextView
						android:id="@+id/txt_invite_cover1_id"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="@color/right_gray_color"
						android:text="Mihail Alexay"
						android:textSize="@dimen/text_size_12"
						android:layout_centerHorizontal="true"
						android:gravity="center"
						android:layout_below="@id/invite_thumbnail_view1_id"
						android:visibility="gone"/>
				</RelativeLayout>
				<RelativeLayout
					android:id="@+id/lay_invite_video2_id"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@drawable/rounded_corner"
					android:padding="1dp"
					android:layout_above="@id/lay_invite_video1_id">
					<ImageView
						android:id="@+id/invite_thumbnail_view2_id"
						android:layout_width="match_parent"
						android:layout_height="@dimen/video_height"
						android:layout_gravity="center"
						android:layout_marginTop="10dp"
						android:scaleType="fitXY"
						android:src="@drawable/no_image"
						android:visibility="gone"/>
					<com.coco.livestreaming.app.ui.widget.GuestPlayerView
						android:id="@+id/invite_view2_id"
						android:layout_width="match_parent"
						android:layout_height="@dimen/video_height"
						android:layout_gravity="center"
						android:layout_marginTop="10dp"
						android:alpha="0"
						android:longClickable="true"
						android:visibility="gone"/>
					<TextView
						android:id="@+id/txt_invite_cover2_id"
						android:layout_width="wrap_content"
						android:layout_height="15dp"
						android:textColor="@color/right_gray_color"
						android:text="Mihail Alexay"
						android:textSize="@dimen/text_size_12"
						android:layout_centerHorizontal="true"
						android:gravity="center"
						android:layout_below="@id/invite_thumbnail_view2_id"
						android:visibility="gone"/>
				</RelativeLayout>
				<RelativeLayout
					android:id="@+id/lay_invite_video3_id"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@drawable/rounded_corner"
					android:padding="1dp"
					android:layout_above="@id/lay_invite_video2_id">
					<ImageView
						android:id="@+id/invite_thumbnail_view3_id"
						android:layout_width="match_parent"
						android:layout_height="@dimen/video_height"
						android:layout_gravity="center"
						android:layout_marginTop="10dp"
						android:scaleType="fitXY"
						android:src="@drawable/no_image"
						android:visibility="gone"/>
					<com.coco.livestreaming.app.ui.widget.GuestPlayerView
						android:id="@+id/invite_view3_id"
						android:layout_width="match_parent"
						android:layout_height="@dimen/video_height"
						android:layout_gravity="center"
						android:layout_marginTop="10dp"
						android:alpha="0"
						android:longClickable="true"
						android:visibility="gone"/>
					<TextView
						android:id="@+id/txt_invite_cover3_id"
						android:layout_width="wrap_content"
						android:layout_height="15dp"
						android:textColor="@color/right_gray_color"
						android:text="Mihail Alexay"
						android:textSize="@dimen/text_size_12"
						android:layout_centerHorizontal="true"
						android:gravity="center"
						android:layout_below="@id/invite_thumbnail_view3_id"
						android:visibility="gone"/>
				</RelativeLayout>
			</RelativeLayout>

			<!--채팅로그화면-->
			<RelativeLayout
				android:id="@+id/lay_chat_log"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_alignParentTop="true"
				android:layout_alignParentStart="true">
				<LinearLayout
                    android:id="@+id/layout_chat"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:layout_alignParentBottom="true">
					<android.support.v7.widget.RecyclerView
						android:id="@+id/messages"
						android:layout_width="match_parent"
						android:layout_height="@dimen/chat_log_lay_bar_height"
						android:paddingLeft="@dimen/activity_horizontal_margin"
						android:paddingRight="@dimen/activity_horizontal_margin"
						android:paddingBottom="@dimen/chat_lay_bar_height"
						android:alpha="0.7"
						android:scrollbars="none"/>
				</LinearLayout>
                <!-- 선물리력보기-->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/ad_img_height"
                    android:layout_centerInParent="true">
                    <include
                        android:id="@+id/lay_present_view_id"
                        style="@style/layout_ww"
                        layout="@layout/present_info"
                        android:visibility="gone"/>
                </RelativeLayout>
			</RelativeLayout>


            <!-- 공개대화 또는 단독대화입력레이어-->
            <LinearLayout
                android:id="@+id/lay_bottom_chat_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="invisible"
                android:background="@drawable/bg_chat"
                android:layout_alignParentBottom="true">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_chat_off_id"
                    android:background="@drawable/ic_arrow_down"/>
                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_chat_lock_id"
                    android:background="@drawable/btn_chat_lock"
                    android:checked="false"
                    android:textOff=""
                    android:textOn=""/>
                <EditText
                    android:id="@+id/message_input"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="6dp"
                    android:background="@color/transparent"
                    android:layout_alignParentBottom="true"
                    android:lines="1"
                    android:inputType="text" />
                <Button
                    android:id="@+id/btn_chat_send_id"
                    android:layout_width="@dimen/chat_lay_bar_height"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:text="@string/chat_send"
                    android:textColor="@color/gray_5f"
                    android:textSize="@dimen/text_size_12"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>
		</RelativeLayout>

        <!-- 상단메뉴바 -->
        <RelativeLayout
            android:id="@+id/lay_top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginStart="@dimen/margin_normal">
            <ImageButton
                android:id="@+id/btn_close_room_id"
                android:layout_width="@dimen/btn_close_width"
                android:layout_height="@dimen/btn_close_height"
                android:src="@drawable/ic_close_white"
                android:background="@color/transparent"
                android:layout_alignParentEnd="true"
                tools:ignore="ContentDescription" />
            <LinearLayout
                android:id="@+id/ll_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toLeftOf="@id/btn_close_room_id">

                <include
                    android:layout_width="@dimen/broadcast_info_width"
                    android:layout_height="@dimen/broadcast_info_height"
                    android:layout_marginRight="@dimen/margin_small"
                    layout="@layout/broadcaster_info" />

                <!--<ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pan_member"
                    tools:ignore="ContentDescription" />-->

                <HorizontalScrollView
                    android:id="@+id/hs_pan_members"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:id="@+id/lay_guest_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>
        </RelativeLayout>

		<!-- 하단 기능단추바 -->
		<FrameLayout
			android:id="@+id/lay_bottom_bar"
			android:layout_width="match_parent"
			android:layout_height="@dimen/chat_lay_bar_height"
			android:layout_alignParentBottom="true">
			<!--  6가지 기능단추 : 메세지,공유,스샷, 바나나, 방송, 하트  -->
			<RelativeLayout
				android:id="@+id/lay_bottom_tool_bar"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:visibility="visible">
				<ImageButton
					android:id="@+id/btn_open_chat_id"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/btn_chat"
					android:layout_marginStart="@dimen/margin_normal"
					android:contentDescription="@string/hello_world"/>
				<ImageButton
					android:id="@+id/btn_open_share_id"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/btn_sharing"
					android:layout_toEndOf="@id/btn_open_chat_id"
					android:contentDescription="@string/hello_world"/>
				<ImageButton
					android:id="@+id/btn_switch_camera_id"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/btn_switch_camera"
					android:layout_toEndOf="@+id/btn_open_share_id" />
				<ImageButton
					android:id="@+id/btn_screenshot_id"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/btn_screenshot"
					android:layout_toEndOf="@+id/btn_switch_camera_id"
					android:contentDescription="@string/hello_world"/>
				<ImageButton
					android:id="@+id/btn_send_banana_id"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/btn_choco"
					android:layout_toEndOf="@+id/btn_screenshot_id"
					android:contentDescription="@string/hello_world"/>
				<!--<com.coco.livestreaming.gocoder.ui.MultiStateButton
					android:id="@+id/ic_broadcast"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/ic_stop"
					sampleui:offSrc="@drawable/ic_start"
					android:background="#000000ff"
					android:layout_marginLeft="15dp"
					android:layout_toRightOf="@+id/btn_send_banana_id" />-->
				<ImageButton
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/btn_send_recomm_id"
					android:layout_alignParentEnd="true"
					android:background="@drawable/btn_recommand"
					android:layout_marginEnd="@dimen/margin_normal"
					android:contentDescription="@string/hello_world"/>
			</RelativeLayout>
		</FrameLayout>

		<!-- 공유화면 -->
		<LinearLayout
			android:id="@+id/lay_share_id"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_alignParentBottom="true"
			android:background="@color/white_color"
			android:visibility="invisible">
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="10dp">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/gray_color"
					android:textSize="@dimen/text_size_12"
					android:text="@string/share_title"
					android:layout_alignParentLeft="true"
					android:layout_centerVertical="true"/>

				<ImageButton
					android:id="@+id/btn_share_close_id"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/ic_close_light_gray"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"/>

			</RelativeLayout>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:weightSum="4"
				android:paddingTop="20dp"
				android:paddingBottom="30dp">
				<RelativeLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:layout_weight="1">
					<ImageButton
						android:id="@+id/btn_share_fri_id"
						android:layout_width="@dimen/btn_close_height"
						android:layout_height="@dimen/btn_close_height"
						android:background="@drawable/share_fri"/>
				</RelativeLayout>
				<RelativeLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:layout_weight="1">
					<ImageButton
						android:id="@+id/btn_share_fb_id"
						android:layout_width="@dimen/btn_close_height"
						android:layout_height="@dimen/btn_close_height"
						android:background="@drawable/share_fb"/>
				</RelativeLayout>
				<RelativeLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:layout_weight="1">
					<ImageButton
						android:id="@+id/btn_share_tw_id"
						android:layout_width="@dimen/btn_close_height"
						android:layout_height="@dimen/btn_close_height"
						android:background="@drawable/share_tw"/>
				</RelativeLayout>
				<RelativeLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:layout_weight="1">
					<ImageButton
						android:id="@+id/btn_share_other_id"
						android:layout_width="@dimen/btn_close_height"
						android:layout_height="@dimen/btn_close_height"
						android:background="@drawable/share_others"/>
				</RelativeLayout>
			</LinearLayout>
		</LinearLayout>

        <ImageButton
            android:id="@+id/btn_mic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_above="@id/lay_bottom_bar"
            android:background="@drawable/btn_mic"
            android:layout_marginEnd="@dimen/margin_normal"
			android:visibility="gone"
            android:contentDescription="@string/hello_world"/>

	</RelativeLayout>

</RelativeLayout>
