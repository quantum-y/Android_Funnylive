<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/dialog_select"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center"
	android:baselineAligned="false">
	<LinearLayout
		android:layout_width="@dimen/dialog_small_width"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="@drawable/round_bg_white">

		<TextView
			android:id="@+id/txt_title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/str_auction_cancel"
			android:textColor="@color/black_color"
			android:textStyle="bold"
			android:textSize="@dimen/text_size_14"
			android:padding="10dp"
			android:gravity="center_horizontal"/>

		<TextView
			android:id="@+id/lb_select_content"
			style="@style/layout_mw"
			android:layout_marginTop="10dp"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp"
			android:layout_marginBottom="10dp"
			android:textColor="@color/gray_5f"
			android:gravity="center"
			android:textSize="@dimen/text_size_12"/>

        <LinearLayout
            style="@style/layout_mw"
            android:padding="@dimen/margin_normal">
            <Button
                android:id="@+id/btn_select_ok"
                android:layout_width="0dp"
                android:layout_height="@dimen/item_ex_small_height"
                android:layout_weight="1"
                android:background="@drawable/round_bg_orange"
                android:gravity="center"
                android:textSize="@dimen/text_size_12"
                android:text="@string/btn_confrim"
                android:textColor="@color/gray_5f"/>
            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btn_select_cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/item_ex_small_height"
                android:layout_weight="1"
                android:background="@drawable/round_bg_no_border_gray"
                android:gravity="center"
                android:textSize="@dimen/text_size_12"
                android:text="@string/btn_cancel"
                android:textColor="@color/gray_5f"/>
        </LinearLayout>
	</LinearLayout>
</LinearLayout>
