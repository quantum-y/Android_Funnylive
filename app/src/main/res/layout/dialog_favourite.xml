<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/dialog_favourite" 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    style="@style/layout_mm"
    android:orientation="vertical">

	<LinearLayout style="@style/layout_m0" />
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="4"
	    android:orientation="horizontal"
	    android:baselineAligned="false">
	    <FrameLayout style="@style/layout_0m" />
	    <LinearLayout 
	        android:layout_width="0dp"
	        android:layout_weight="6"
		    android:layout_height="match_parent"
		    android:orientation="vertical">
		    <RelativeLayout 
		        style="@style/layout_mw">
			    <TextView 
			   		android:layout_width="match_parent"
			   		android:layout_height="@dimen/item_small_height"
			   		android:text="@string/str_profile_setting_alarm"
			   		android:background="@color/golden_color"
			   		android:textColor="@color/green_color1"
			   		android:textStyle="bold"
			   		android:textSize="@dimen/text_size_18"
			   		android:gravity="center"
			   		android:paddingStart="10dp"
			   		android:paddingEnd="10dp"/>
			    <ImageButton
			        android:id="@+id/btn_cancel" 
			        style="@style/layout_ww"
			        android:background="@drawable/ic_close_green"
			        android:layout_centerVertical="true"
			        android:layout_alignParentEnd="true"/>
		   	</RelativeLayout>
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="@dimen/favourit_list_height">
				<ListView
					android:id="@+id/list_fan"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					/>
				<!--TextView
					android:id="@+id/lbNoDatas"
					style="@style/layout_mm"
					android:textColor="@color/golden_color"
					android:text="@string/no_datas"
					android:gravity="center"
					android:textStyle="bold"
					android:textSize="@dimen/text_size_16"
					android:visibility="gone"
					android:layout_centerInParent="true"/-->
			</RelativeLayout>


	    </LinearLayout>
	    <FrameLayout style="@style/layout_0m"/>
	</LinearLayout>
	<LinearLayout style="@style/layout_m0" />
</LinearLayout>
