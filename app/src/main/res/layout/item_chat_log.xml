<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">
    <LinearLayout
        android:id="@+id/layout_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/round_bg_black_border_no"
        android:paddingTop="@dimen/margin_small"
        android:paddingBottom="@dimen/margin_small"
        android:paddingStart="@dimen/margin_small">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_level_id"
                android:layout_width="@dimen/chat_level_icon"
                android:layout_height="@dimen/chat_level_icon"
                android:background="@drawable/shape_circle_border_no"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin_normal"
                android:text="5"
                android:textColor="@color/white"
                android:visibility="visible"/>
            <ImageView
                android:id="@+id/img_level_top_id"
                android:layout_width="@dimen/chat_level_icon"
                android:layout_height="@dimen/chat_level_icon"
                android:background="@drawable/icon_live_msg_top_fans_bg"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/txt_level_top_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18"
                android:textColor="@color/right_gray_color"
                android:layout_centerVertical="false"
                android:textSize="@dimen/text_size_05"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:visibility="gone"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/txt_username_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="180dp"
            android:text="BlackOx"
            android:textColor="@color/white_color"
            android:textSize="@dimen/text_size_10"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txt_message_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="180dp"
            android:text="I love you"
            android:textColor="@color/white_color"
            android:textSize="@dimen/text_size_8"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/txt_recommend_suffix_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sent"
            android:textSize="@dimen/text_size_8"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/username2"
            android:drawableRight="@drawable/bg_red_heart"
            android:drawablePadding="5dp"
            android:visibility="visible"/>
    </LinearLayout>
</FrameLayout>


