<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_mw"
    android:scrollbars="none">

    <LinearLayout
        style="@style/layout_mm"
        android:orientation="vertical">

        <LinearLayout style="@style/profile_edit_info_row" >
            <TextView
                android:text="@string/profile_user_import"
                style="@style/profile_edit_info_bottom_row_label"
                android:drawableStart="@drawable/ic_money"
                android:drawablePadding="10dp"
                android:layout_weight="1"/>
            <RelativeLayout
                style="@style/layout_0m"
                android:layout_weight="2">
                <TextView
                    android:id="@+id/profile_user_import_id"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/item_height"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/gray_5f"
                    android:textSize="@dimen/text_size_12"/>
            </RelativeLayout>
        </LinearLayout>

       <View style="@style/splite_line_gray"/>

        <LinearLayout style="@style/profile_edit_info_row" >
            <TextView
                android:text="@string/profile_user_egg"
                style="@style/profile_edit_info_bottom_row_label"
                android:drawableStart="@drawable/ic_egg"
                android:drawablePadding="10dp"
                android:layout_weight="1"/>
            <RelativeLayout
                style="@style/layout_0m"
                android:layout_weight="2">
                <TextView
                    android:id="@+id/profile_user_banana_id"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/item_height"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/gray_5f"
                    android:textSize="@dimen/text_size_12"/>
                <ImageButton
                    android:id="@+id/img_excharge_id"
                    style="@style/layout_ww"
                    android:background="@drawable/ic_arrow_right_small"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/hello_world"/>
            </RelativeLayout>
        </LinearLayout>

       <View style="@style/splite_line_gray"/>

        <LinearLayout style="@style/profile_edit_info_row" >
            <TextView
                android:text="@string/profile_user_level"
                style="@style/profile_edit_info_bottom_row_label"
                android:drawableStart="@drawable/ic_star"
                android:drawablePadding="10dp"
                android:layout_weight="1"/>
            <RelativeLayout
                style="@style/layout_0m"
                android:layout_weight="2">
                <TextView
                    android:id="@+id/profile_user_level_id"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/item_height"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/gray_5f"
                    android:textSize="@dimen/text_size_12"/>
            </RelativeLayout>
        </LinearLayout>

       <View style="@style/splite_line_gray"/>

        <LinearLayout style="@style/profile_edit_info_row" >
            <TextView
                android:text="@string/profile_user_rank"
                style="@style/profile_edit_info_bottom_row_label"
                android:drawableStart="@drawable/ic_medal"
                android:drawablePadding="10dp"
                android:layout_weight="1"/>
            <RelativeLayout
                style="@style/layout_0m"
                android:layout_weight="2">
                <TextView
                    android:id="@+id/profile_user_rank_id"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/item_height"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/gray_5f"
                    android:textSize="@dimen/text_size_12"/>
            </RelativeLayout>
        </LinearLayout>

       <View style="@style/splite_line_gray"/>

        <LinearLayout style="@style/profile_edit_info_row" >
            <TextView
                android:text="@string/profile_user_setting"
                style="@style/profile_edit_info_bottom_row_label"
                android:drawableStart="@drawable/ic_setting"
                android:drawablePadding="10dp"
                android:layout_weight="1"/>
            <RelativeLayout
                style="@style/layout_0m"
                android:layout_weight="2">
                <ImageButton
                    android:id="@+id/img_profile_user_setting_id"
                    style="@style/layout_ww"
                    android:background="@drawable/ic_arrow_right_small"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/hello_world"/>
            </RelativeLayout>
        </LinearLayout>

        <View style="@style/splite_line_gray"/>

        <LinearLayout style="@style/profile_edit_info_row" >
            <TextView
                android:text="@string/profile_user_feedback"
                style="@style/profile_edit_info_bottom_row_label"
                android:drawableStart="@drawable/ic_feedback"
                android:drawablePadding="10dp"
                android:layout_weight="1"/>
            <RelativeLayout
                style="@style/layout_0m"
                android:layout_weight="2">
                <TextView
                    android:id="@+id/profile_user_feedback"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/item_height"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/gray_5f"
                    android:textSize="@dimen/text_size_12"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
 </ScrollView>