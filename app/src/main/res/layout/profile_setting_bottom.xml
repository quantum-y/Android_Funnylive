<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_mm"
    android:orientation="vertical">

    <LinearLayout style="@style/profile_edit_info_row" >
        <TextView
            android:text="@string/str_profile_setting_alarm"
            style="@style/profile_setting_bottom_row_label_setting"/>
        <RelativeLayout style="@style/layout_mm"
            android:paddingRight="@dimen/margin_normal">
            <ToggleButton
	            android:id="@+id/switch_alarm_id"
	            style="@style/layout_ww"
	            android:background="@drawable/ic_toggle"
	            android:layout_alignParentEnd="true"
	            android:layout_centerVertical="true"
	            android:checked="true"
				android:textOff=""
				android:textOn=""/>
        </RelativeLayout>
    </LinearLayout>

    <View style="@style/splite_line_gray"/>
	
    <LinearLayout style="@style/profile_edit_info_row" >
        <TextView
            android:text="@string/str_profile_setting_protect_location"
            style="@style/profile_setting_bottom_row_label_setting"/>
        <RelativeLayout style="@style/layout_mm"
            android:paddingRight="@dimen/margin_normal">
            <ToggleButton
	            android:id="@+id/switch_protect_location_id"
	            style="@style/layout_ww"
	            android:background="@drawable/ic_toggle"
	            android:layout_alignParentEnd="true"
	            android:layout_centerVertical="true"
	            android:checked="true"
				android:textOff=""
				android:textOn=""/>
            <View
                style="@style/splite_line"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </LinearLayout>

    <View style="@style/splite_line_gray"/>

    <LinearLayout
        style="@style/profile_edit_info_row">
        <TextView
            android:text="@string/str_profile_setting_about_us"
            style="@style/profile_setting_bottom_row_label_setting"/>
        <RelativeLayout style="@style/layout_mm"
            android:paddingRight="@dimen/margin_normal">
            <ImageView
				android:id="@+id/img_login_agreement_id"
				style="@style/layout_ww"
				android:layout_alignParentEnd="true"
	            android:layout_centerVertical="true"
				android:background="@drawable/ic_arrow_right_small"
				android:contentDescription="@string/hello_world"/>
        </RelativeLayout>
    </LinearLayout>

    <View style="@style/splite_line_gray"/>

