<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/layout_mw"
	android:paddingTop="20dp"
	android:orientation="vertical"
    android:background="@color/white">
	<LinearLayout
		style="@style/layout_mw"
		android:paddingStart="20dp"
		android:paddingEnd="20dp"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/tvCategoryTitle"
			style="@style/layout_ww"
			android:textColor="@color/gray_5f"
			android:textSize="@dimen/text_size_12"
			android:textStyle="bold"
			android:text="@string/category_new"/>
		<View
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1" />
		<Button
			android:id="@+id/btnDetail"
			style="@style/layout_ww"
			android:textSize="@dimen/text_size_10"
			android:textColor="@color/gray_5f"
			android:background="@color/transparent"
			android:text="@string/search_category_detail"/>
	</LinearLayout>

	<LinearLayout
		style="@style/layout_mw"
		android:orientation="horizontal"
		android:layout_marginTop="10dp"
		android:paddingStart="5dp"
		android:paddingEnd="5dp">
		<RelativeLayout
			android:id="@+id/rlBjMemeber1"
			style="@style/layout_0w"
			android:visibility="visible"
			android:padding="1dp">
            <RelativeLayout
                android:layout_width="@dimen/explorer_image_height"
                android:layout_height="@dimen/explorer_image_height"
                android:layout_centerInParent="true">

				<ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/explorer_image_height_half"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/bottom_shadow"/>
                <TextView
                    android:id="@+id/txtBjMemeber1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_10"
                    android:layout_alignParentBottom="true"
                    android:lines="1"
                    android:layout_margin="@dimen/margin_normal"/>

				<ImageView
                    android:id="@+id/imgBjMemeber1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:src="@drawable/no_image"
                    android:scaleType="centerInside"
					android:layout_alignParentTop="true"
					android:layout_alignParentStart="true" />
				<ImageView
					android:layout_width="match_parent"
					android:layout_height="@dimen/explorer_image_height_half"
					android:layout_alignParentBottom="true"
					android:background="@drawable/bottom_shadow"/>
			</RelativeLayout>
		</RelativeLayout>
		<RelativeLayout
			android:id="@+id/rlBjMemeber2"
			style="@style/layout_0w"
			android:visibility="visible"
			android:padding="1dp">

            <RelativeLayout
                android:layout_width="@dimen/explorer_image_height"
                android:layout_height="@dimen/explorer_image_height"
                android:layout_centerInParent="true">
                <ImageView
                    android:id="@+id/imgBjMemeber2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/gray_cc"
                    android:src="@drawable/no_image"
                    android:scaleType="fitXY" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/explorer_image_height_half"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/bottom_shadow"/>
                <TextView
                    android:id="@+id/txtBjMemeber2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_10"
                    android:layout_alignParentBottom="true"
                    android:lines="1"
                    android:layout_margin="@dimen/margin_normal"/>
            </RelativeLayout>
			<TextView
				android:id="@+id/tvNoData"
				style="@style/layout_ww"
				android:textSize="@dimen/text_size_16"
				android:textColor="@color/golden_color"
				android:text="@string/category_nodata"
				android:layout_centerInParent="true"
				android:visibility="gone"/>
		</RelativeLayout>
		<RelativeLayout
			android:id="@+id/rlBjMemeber3"
			style="@style/layout_0w"
			android:visibility="visible"
			android:padding="1dp">
            <RelativeLayout
                android:layout_width="@dimen/explorer_image_height"
                android:layout_height="@dimen/explorer_image_height"
                android:layout_centerInParent="true">
                <ImageView
                    android:id="@+id/imgBjMemeber3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/gray_cc"
                    android:src="@drawable/no_image"
                    android:scaleType="fitXY" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/explorer_image_height_half"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/bottom_shadow"/>
                <TextView
                    android:id="@+id/txtBjMemeber3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_10"
                    android:layout_alignParentBottom="true"
                    android:lines="1"
                    android:layout_margin="@dimen/margin_normal"/>
            </RelativeLayout>
		</RelativeLayout>
	</LinearLayout>
</LinearLayout>