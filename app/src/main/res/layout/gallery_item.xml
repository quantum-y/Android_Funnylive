<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/explore_detail_item_height"
    android:orientation="horizontal">
    <RelativeLayout
        style="@style/layout_0m">
        <ImageView
            android:id="@+id/imgQueue"
            style="@style/layout_mm"
            android:layout_height="@dimen/explore_detail_item_height"
            android:background="@drawable/no_image"
            android:scaleType="fitXY"
            android:contentDescription="@string/hello_world"/>
        <ImageView
            android:id="@+id/imgQueueMask"
            style="@style/layout_mm"
            android:background="#AF000000"
            android:scaleType="fitXY"
            android:contentDescription="@string/hello_world"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/imgQueueMultiSelected"
            style="@style/layout_ww"
            android:layout_alignParentEnd="true"
            android:layout_margin="2dp"
            android:background="@drawable/check_box"
            android:contentDescription="@string/app_name"
            android:scaleType="center"
            android:visibility="visible" />
        <LinearLayout
            style="@style/layout_mw"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_info"
                android:layout_width="match_parent"
                android:layout_height="@dimen/explore_detail_item_bottom_bar_height"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/light_gray_color"
                android:background="@drawable/bottom_shadow"
                android:paddingRight="2dp"
                android:gravity="bottom|right"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/white"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/white"/>
</LinearLayout>